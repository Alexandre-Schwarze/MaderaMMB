        <!-- Header List style -->
        <Setter Property="HorizontalContentAlignment" Value="Left" />
    </Style>

    <!-- Image Logo -->
    <ImageSource x:Key="Logo">../logo_madera.png</ImageSource>
    <ImageSource x:Key="LogoOff">../logo_offline.png</ImageSource>
