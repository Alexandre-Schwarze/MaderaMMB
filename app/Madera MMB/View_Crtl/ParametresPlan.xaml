<Page x:Class="Madera_MMB.View_Crtl.ParametresPlan"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="ParametresPlan">

    <!-- Début Déclaration Template-->
    <Page.Resources>
        <BitmapImage x:Key="Logo" UriSource="../Lib/logo_madera.png"/>
    </Page.Resources>
    


    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.25*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="0.25*" />
        </Grid.RowDefinitions>

        <Border Grid.Row="2" BorderBrush="Black" BorderThickness="2" Margin="-15,0,-15,0"/>

        <Grid x:Name="ImgContainer"  Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.30*" />
                <ColumnDefinition Width="0.50*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Image Name="Logo" Grid.Column="0" Source="{StaticResource Logo}" Grid.Row="0" Width="{Binding ActualHeight, ElementName=rowDefinition0}" RenderTransformOrigin="0.706,0.609" Margin="10,10,10,10"/>
            <Label Content="Paramètres du plan : " FontWeight="ExtraBold" FontSize="15" Grid.Column="1" HorizontalAlignment="Left" Height="40" VerticalAlignment="Center" Width="{Binding ActualHeight, ElementName=rowDefinition0}" Margin="10,10,10,10"/>
        </Grid>

        <Grid Grid.Row="2" Grid.Column="0" >
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.25*"/>
                <ColumnDefinition Width="0.25*"/>
                <ColumnDefinition Width="0.25*"/>
                <ColumnDefinition Width="0.25*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border  BorderBrush="Black" BorderThickness="2" Grid.Column="0" Grid.RowSpan="2" Margin="-5,0,0,0"/>

            <Button HorizontalAlignment="Stretch" Grid.Row="0" Height="{Binding ActualHeight, ElementName=columnDefinition0}" Width="{Binding ActualWidth, ElementName=rowDefinition0}" VerticalAlignment="Stretch" Margin="10,10,10,10" Content="Confirmer"/>
            <Button HorizontalAlignment="Stretch" Grid.Row="1" Height="{Binding ActualHeight, ElementName=columnDefinition0}" Width="{Binding ActualWidth, ElementName=rowDefinition0}" VerticalAlignment="Stretch" Margin="10,10,10,10" Content="Retour"/>

            <Label Grid.Row="0" Grid.Column="1" Content=" Nom du client : " FontWeight="Bold" FontSize="15" Width="{Binding ActualWidth, ElementName=rowDefinition0}" Height="{Binding ActualHeight, ElementName=columnDefinition0}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Label Grid.Row="1" Grid.Column="1" Content=" Statut actuel : " FontWeight="Bold" FontSize="15" Width="{Binding ActualWidth, ElementName=rowDefinition0}" Height="{Binding ActualHeight, ElementName=columnDefinition0}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Label Grid.Row="0" Grid.Column="3" Content=" Date de création : " FontWeight="Bold" FontSize="15" Width="{Binding ActualWidth, ElementName=rowDefinition0}" Height="{Binding ActualHeight, ElementName=columnDefinition0}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Label Grid.Row="1" Grid.Column="3" Content=" Nom du Commercial : " FontWeight="Bold" FontSize="15" Width="{Binding ActualWidth, ElementName=rowDefinition0}" Height="{Binding ActualHeight, ElementName=columnDefinition0}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>

        <!-- Début Déclaration Vue-->
        <Grid x:Name="Params" Grid.Column="1" Grid.Row="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="{Binding ActualWidth, ElementName=columnDefinition1}" Height="{Binding ActualHeight, ElementName=rowDefinition1}" Grid.RowSpan="2" Grid.ColumnSpan="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.30*"/>
                <RowDefinition Height="0.30*"/>
                <RowDefinition Height="0.30*"/>
                <RowDefinition Height="0.30*"/>
                <RowDefinition Height="0.30*"/>
                <RowDefinition Height="0.30*"/>
                <RowDefinition Height="0.30*"/>
                <RowDefinition Height="0.30*"/>
                <RowDefinition Height="0.30*"/>
                <RowDefinition Height="0.30*"/>
                <RowDefinition Height="0.30*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.25*"/>
                <ColumnDefinition Width="0.30*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Margin="15,0,0,0" Grid.Row="2" Content="* Nom du plan : " FontWeight="Bold" FontSize="13" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label Margin="15,0,0,0" Grid.Row="3" Content="* Coupe de principe : " FontWeight="Bold" FontSize="13" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label Margin="15,0,0,0" Grid.Row="4" Content="* Type de couverture : " FontWeight="Bold" FontSize="13" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label Margin="15,0,0,0" Grid.Row="5" Content="* Type de plancher  : " FontWeight="Bold" FontSize="13" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label Margin="15,0,0,0" Grid.Row="6" Content="* Choix d'une gamme  : " FontWeight="Bold" FontSize="13" HorizontalAlignment="Left" VerticalAlignment="Center"/>

            <Label Grid.Row="10" Content="* Champs obligatoires " FontWeight="Bold" FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>

            <TextBox Text="Plan 5 Base Carré " Height="30" HorizontalAlignment="Stretch" Grid.Column="1" Grid.Row="2"  TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Width="200"/>
            <ToggleButton x:Name="btnchoix1" Content=" Choisir une coupe " Height="30" HorizontalAlignment="Stretch" Grid.Column="1" Grid.Row="3"   VerticalAlignment="Center" Click="cp_Button_Click" />
            <ToggleButton x:Name="btnchoix2" Content=" Choisir une couverture " Height="30" HorizontalAlignment="Stretch" Grid.Column="1" Grid.Row="4"   VerticalAlignment="Center"  Click="couv_Button_Click"/>
            <ToggleButton x:Name="btnchoix3" Content=" Choisir un plancher " Height="30" HorizontalAlignment="Stretch" Grid.Column="1" Grid.Row="5"   VerticalAlignment="Center" Click="planc_Button_Click" />
            <ToggleButton x:Name="btnchoix4" Content=" Choisir une gamme " Height="30" HorizontalAlignment="Stretch" Grid.Column="1" Grid.Row="6"   VerticalAlignment="Center" />

            <GroupBox x:Name="forme" Visibility="Hidden" Header="Sélection d'une forme"  Grid.Column="2" Grid.Row="0" Grid.RowSpan="5"
                      Height="{Binding ActualHeight, ElementName=rowDefinition1}"
                      Margin="25,0,25,0">
                <WrapPanel x:Name="wrapformes"/>
            </GroupBox>

            <GroupBox x:Name="taille" Visibility="Hidden" Header="Sélection d'une taille"  Grid.Column="2" Grid.Row="5" Grid.RowSpan="5"
                      Height="{Binding ActualHeight, ElementName=rowDefinition1}"
                      Margin="25,0,25,0">
                <StackPanel  Width="{Binding ActualWidth, ElementName=columnDefinition1}">
                    <WrapPanel x:Name="wraptailles"/>
                    <ScrollBar Height="{Binding ActualHeight, ElementName=rowDefinition1}" HorizontalAlignment="Right"/>
                </StackPanel>
            </GroupBox>

            <GroupBox x:Name="couv" Visibility="Hidden" Header="Sélection d'une couverture"  Grid.Column="2" Grid.Row="1" Grid.RowSpan="5"
                      Height="{Binding ActualHeight, ElementName=rowDefinition1}"
                      Margin="25,0,25,0">
                <StackPanel  Width="{Binding ActualWidth, ElementName=columnDefinition1}">
                    <WrapPanel x:Name="wrapcouv"/>
                    <ScrollBar Height="{Binding ActualHeight, ElementName=rowDefinition1}" HorizontalAlignment="Right"/>
                </StackPanel>
            </GroupBox>

            <GroupBox x:Name="planch" Visibility="Hidden" Header="Sélection d'un plancher"  Grid.Column="2" Grid.Row="1" Grid.RowSpan="5"
                      Height="{Binding ActualHeight, ElementName=rowDefinition1}"
                      Margin="25,0,25,0">
                <StackPanel  Width="{Binding ActualWidth, ElementName=columnDefinition1}">
                    <WrapPanel x:Name="wrapplanch"/>
                    <ScrollBar Height="{Binding ActualHeight, ElementName=rowDefinition1}" HorizontalAlignment="Right"/>
                </StackPanel>
            </GroupBox>
        </Grid>
        <!-- Fin Déclaration Vue -->

    </Grid>
    <!-- Fin Déclaration Template -->
</Page>
