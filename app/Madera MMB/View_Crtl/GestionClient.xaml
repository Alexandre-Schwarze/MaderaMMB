<Page x:Class="Madera_MMB.View_Crtl.GestionClient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="1661.667" d:DesignWidth="2650.333"
      Title="GestionClient"
      FontFamily="Segoe UI Semibold">

    <!-- Début Déclaration Template-->
    <Page.Resources>
        <!-- Image Logo -->
        <BitmapImage x:Key="Logo" UriSource="../Lib/logo_madera.png"/>
        <!-- Label style -->
        <Style TargetType="{x:Type Label}">
            <Setter Property="FontSize" Value="12" />
        </Style>

        <Style TargetType="{x:Type Button}">
            <!-- Bouton style -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="bdr" CornerRadius="90" Margin="3" Background="LightGray">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Content" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bdr" Property="Background" Value="YellowGreen"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <!-- Fin Déclaration Template-->

    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.25*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.25*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="0.25*" />
        </Grid.RowDefinitions>

        <!-- Début Déclaration Footer Gestion Client-->
        <Grid Grid.Row="2"
              Margin="0 5 5 5"
              Grid.Column="2"
              Grid.RowSpan="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="0.25*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Background="DimGray"
                  Grid.Column="0" 
                  Grid.Row="1" 
                  VerticalAlignment="Stretch" 
                  HorizontalAlignment="Stretch" 
                  Width="{Binding ActualWidth, ElementName=columnDefinition1}" 
                  Height="{Binding ActualHeight, ElementName=rowDefinition1}" 
                  Grid.RowSpan="2" 
                  Grid.ColumnSpan="2">

                <Grid.RowDefinitions>
                    <RowDefinition Height="0.05*"/>
                    <RowDefinition Height="0.25*"/>
                    <RowDefinition Height="0.05*"/>
                    <RowDefinition Height="0.25*"/>
                    <RowDefinition Height="0.05*"/>
                    <RowDefinition Height="0.25*"/>
                    <RowDefinition Height="0.05*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.05*"/>
                    <ColumnDefinition Width="0.4*"/>
                    <ColumnDefinition Width="0.05*"/>
                    <ColumnDefinition Width="0.4*"/>
                    <ColumnDefinition Width="0.05*"/>
                </Grid.ColumnDefinitions>

                <!-- Partie de gauche -->
                <Label Content="Nom du client :"
                        Grid.Row="1"
                        Grid.Column="1"
                        VerticalAlignment="Stretch" 
                        HorizontalAlignment="Stretch">
                </Label>
                <Label Content="Date de création :"
                        Grid.Row="3"
                        Grid.Column="1"
                        VerticalAlignment="Stretch" 
                        HorizontalAlignment="Stretch">
                </Label>
                <Label Content="Statut actuel :"
                        Grid.Row="5"
                        Grid.Column="1"
                        VerticalAlignment="Stretch" 
                        HorizontalAlignment="Stretch">
                </Label>

                <!-- Partie de droite -->
                <Label Content="Nombre de plan :"
                        Grid.Row="1"
                        Grid.Column="3"
                        VerticalAlignment="Stretch" 
                        HorizontalAlignment="Stretch">
                </Label>
                <Label Content="Dernière mise à jour :"
                        Grid.Row="3"
                        Grid.Column="3"
                        VerticalAlignment="Stretch" 
                        HorizontalAlignment="Stretch">
                </Label>
                <Label Content="Nom du commercial : José Répos"
                        Grid.Row="5"
                        Grid.Column="3"
                        VerticalAlignment="Stretch" 
                        HorizontalAlignment="Stretch">
                </Label>

            </Grid>

            <Border Grid.Row="2" BorderBrush="Black" BorderThickness="1 2 2 1" Grid.Column="1" />

        </Grid>
        <!-- Fin Déclaration Footer Gestion Client-->

        <!-- Début Déclaration Logo Madera -->
        <Grid x:Name="ImgContainer"  Grid.Row="0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Image Name="Logo" 
                   Grid.Column="0" 
                   Source="{StaticResource Logo}" 
                   Grid.Row="0" 
                   Width="{Binding ActualHeight, ElementName=rowDefinition0}" 
                   Margin="10"/>
        </Grid>
        <!-- Fin Déclaration Logo Madera -->

        <!-- Début Déclaration Menu Gestion Client-->
        <Grid x:Name="MenuGestionClient"
              Margin="5 0 5 5"
              Grid.Row="1"
              Grid.Column="0" 
              Grid.RowSpan="2">

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.25*"/>
            </Grid.ColumnDefinitions>

            <!-- Début Déclaration Menu Gestion Client-->
            <Grid Background="DimGray"  
                  Grid.Column="1" 
                  Grid.Row="0" 
                  VerticalAlignment="Stretch" 
                  HorizontalAlignment="Stretch" 
                  Width="{Binding ActualWidth, ElementName=columnDefinition1}" 
                  Height="{Binding ActualHeight, ElementName=rowDefinition1}" 
                  Grid.RowSpan="2" 
                  Grid.ColumnSpan="1">

                <Grid.RowDefinitions>
                    <RowDefinition Height="0.2*" />
                    <RowDefinition Height="0.5*" />
                    <RowDefinition Height="0.2*" />
                    <RowDefinition Height="0.5*" />
                    <RowDefinition Height="0.2*" />
                    <RowDefinition Height="0.5*" />
                    <RowDefinition Height="0.2*" />
                    <RowDefinition Height="0.5*" />
                    <RowDefinition Height="0.2*" />
                    <RowDefinition Height="0.5*" />
                    <RowDefinition Height="0.2*" />
                    <RowDefinition Height="0.5*" />
                    <RowDefinition Height="0.2*" />
                    <RowDefinition Height="0.5*" />
                    <RowDefinition Height="0.2*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.1*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="0.1*" />
                </Grid.ColumnDefinitions>

                <Button Content="Liste des clients"
                        Grid.Row="1"
                        Grid.Column="1"
                        VerticalAlignment="Stretch" 
                        HorizontalAlignment="Stretch"
                        Click="Btn_List_Client_Click">
                </Button>
                <Button Content="Créer un client"
                        Grid.Row="3"
                        Grid.Column="1"
                        VerticalAlignment="Stretch" 
                        HorizontalAlignment="Stretch"
                        Click="Btn_Creer_Client_Click">
                </Button>
                <Button x:Name="btn_creer_projet" 
                        Content="Créer un projet"
                        Grid.Row="5"
                        Grid.Column="1"
                        VerticalAlignment="Stretch" 
                        HorizontalAlignment="Stretch"
                        Click="Btn_Creer_Projet_Click">
                </Button>
                <Button Content="Ouvrir le projet"
                        Grid.Row="7"
                        Grid.Column="1"
                        VerticalAlignment="Stretch" 
                        HorizontalAlignment="Stretch"
                        Click="Btn_Ouvrir_Projet_Click">
                </Button>
                <Button Content="Déconnexion"
                        Grid.Row="13"
                        Grid.Column="1"
                        VerticalAlignment="Stretch" 
                        HorizontalAlignment="Stretch"
                        Click="Btn_Se_Deconnecter_Click">
                </Button>
            </Grid>
            <!-- Fin Déclaration Menu Gestion Client -->
            <Border Grid.Row="0" BorderBrush="Black" BorderThickness="1 2 2 1" />

        </Grid>
        <!-- Fin Déclaration Menu Gestion Client -->

        <!-- Fin Déclaration Modal Creation Nouveau Projet Client -->
        <Grid Grid.Column="1"
              Grid.Row="1" 
              Grid.RowSpan="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="0.5*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0.7*"/>
            </Grid.ColumnDefinitions>

            <Grid x:Name="ModalCreationNouveauProjet"
                  Background="DimGray"  
                  Grid.Column="1" 
                  Grid.Row="1" 
                  VerticalAlignment="Stretch" 
                  HorizontalAlignment="Stretch" 
                  Width="{Binding ActualWidth, ElementName=columnDefinition1}" 
                  Height="{Binding ActualHeight, ElementName=rowDefinition1}" 
                  Grid.RowSpan="1" 
                  Grid.ColumnSpan="1">

                <Grid.RowDefinitions>
                    <RowDefinition Height="0.1*" />
                    <RowDefinition Height="0.2*" />
                    <RowDefinition Height="0.2*" />
                    <RowDefinition Height="0.3*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="0.3*" />
                    <RowDefinition Height="0.1*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.1*" />
                    <ColumnDefinition Width="0.5*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="0.5*" />
                    <ColumnDefinition Width="0.1*" />
                </Grid.ColumnDefinitions>

                <TextBlock TextWrapping="Wrap"
                           FontSize="18"
                           Grid.Row="1"
                           Grid.Column="1">
                    Nouveau Projet
                </TextBlock>
                <ComboBox Name="CbSelectNomClient"
                          SelectedIndex="0"
                          MaxWidth="250"
                          Grid.Row="2"
                          Grid.Column="2"
                          VerticalAlignment="Stretch"
                          HorizontalAlignment="Stretch">
                    <Label>--- Sélectionner ---</Label>
                    <Label>CERISIER Madeleine</Label>
                    <Label>CHENE Yves</Label>
                    <Label>NOISETTIER Louise</Label>
                    <Label>TILLEULE Bertrand</Label>
                    <Label>SAPIN Léa</Label>
                    <Label>POIRIER José</Label>
                    <Label>NOYER Thierry</Label>
                    <Label>SAULE Florian</Label>
                </ComboBox>
                <Button Content="Retour"                        
                        Grid.Row="5"
                        Grid.Column="1"
                        VerticalAlignment="Stretch" 
                        HorizontalAlignment="Stretch"
                        Click="Btn_Retour_Click">
                </Button>
                <Button Content="Valider"
                        Grid.Row="5"
                        Grid.Column="3"
                        VerticalAlignment="Stretch" 
                        HorizontalAlignment="Stretch"
                        Click="Btn_Valider_Click">
                </Button>
            </Grid>
        </Grid>
        <!-- Fin Déclaration Modal Creation Nouveau Projet Client -->

        <!-- Début Déclaration Liste Gestion Client-->
        <Grid x:Name="GestionProjetClient"
              Grid.Column="1"
              Grid.Row="0" 
              VerticalAlignment="Stretch" 
              HorizontalAlignment="Stretch" 
              Width="{Binding ActualWidth, ElementName=columnDefinition1}" 
              Height="{Binding ActualHeight, ElementName=rowDefinition1}" 
              Grid.RowSpan="2" 
              Grid.ColumnSpan="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <WrapPanel>

                <Button Margin="20"
                        Width="150"
                        Height="150"
                        Click="Btn_Retour_Click">
                    <StackPanel>
                        <Image Source="../Lib/Images/folder.png" VerticalAlignment="Top" Height="80" Width="80"/>
                        <TextBlock Margin="10" HorizontalAlignment="Center" TextWrapping="Wrap" Text="CERISER M" VerticalAlignment="Top" FontFamily="Segoe WP Black" FontSize="14"/>
                    </StackPanel>
                </Button>
                <Button Margin="20"
                        Width="150"
                        Height="150"
                        Click="Btn_Retour_Click">
                    <StackPanel>
                        <Image Source="../Lib/Images/existing_folder.png" VerticalAlignment="Top" Height="80" Width="80"/>
                        <TextBlock Margin="10" HorizontalAlignment="Center" TextWrapping="Wrap" Text="CHENE Y" VerticalAlignment="Top" FontFamily="Segoe WP Black" FontSize="14"/>
                    </StackPanel>
                </Button>
                <Button Margin="20"
                        Width="150"
                        Height="150"
                        Click="Btn_Retour_Click">
                    <StackPanel>
                        <Image Source="../Lib/Images/empty_folder.png" VerticalAlignment="Top" Height="80" Width="80"/>
                        <TextBlock Margin="10" HorizontalAlignment="Center" TextWrapping="Wrap" Text="NOISETTIER L" VerticalAlignment="Top" FontFamily="Segoe WP Black" FontSize="14"/>
                    </StackPanel>
                </Button>
                <Button Margin="20"
                        Width="150"
                        Height="150"
                        Click="Btn_Retour_Click">
                    <StackPanel>
                        <Image Source="../Lib/Images/folder.png" VerticalAlignment="Top" Height="80" Width="80"/>
                        <TextBlock Margin="10" HorizontalAlignment="Center" TextWrapping="Wrap" Text="TILLEULE B" VerticalAlignment="Top" FontFamily="Segoe WP Black" FontSize="14"/>
                    </StackPanel>
                </Button>
                <Button Margin="20"
                        Width="150"
                        Height="150"
                        Click="Btn_Retour_Click">
                    <StackPanel>
                        <Image Source="../Lib/Images/empty_folder.png" VerticalAlignment="Top" Height="80" Width="80"/>
                        <TextBlock Margin="10" HorizontalAlignment="Center" TextWrapping="Wrap" Text="SAPIN L" VerticalAlignment="Top" FontFamily="Segoe WP Black" FontSize="14"/>
                    </StackPanel>
                </Button>
                <Button Margin="20"
                        Width="150"
                        Height="150"
                        Click="Btn_Retour_Click">
                    <StackPanel>
                        <Image Source="../Lib/Images/folder.png" VerticalAlignment="Top" Height="80" Width="80"/>
                        <TextBlock Margin="10" HorizontalAlignment="Center" TextWrapping="Wrap" Text="POIRIER J" VerticalAlignment="Top" FontFamily="Segoe WP Black" FontSize="14"/>
                    </StackPanel>
                </Button>
                <Button Margin="20"
                        Width="150"
                        Height="150"
                        Click="Btn_Retour_Click">
                    <StackPanel>
                        <Image Source="../Lib/Images/existing_folder.png" VerticalAlignment="Top" Height="80" Width="80"/>
                        <TextBlock Margin="10" HorizontalAlignment="Center" TextWrapping="Wrap" Text="PRUNIER M" VerticalAlignment="Top" FontFamily="Segoe WP Black" FontSize="14"/>
                    </StackPanel>
                </Button>
                <Button Margin="20"
                        Width="150"
                        Height="150"
                        Click="Btn_Retour_Click">
                    <StackPanel>
                        <Image Source="../Lib/Images/existing_folder.png" VerticalAlignment="Top" Height="80" Width="80"/>
                        <TextBlock Margin="10" HorizontalAlignment="Center" TextWrapping="Wrap" Text="NOYER T" VerticalAlignment="Top" FontFamily="Segoe WP Black" FontSize="14"/>
                    </StackPanel>
                </Button>
                <Button Margin="20"
                        Width="150"
                        Height="150"
                        Click="Btn_Retour_Click">
                    <StackPanel>
                        <Image Source="../Lib/Images/folder.png" VerticalAlignment="Top" Height="80" Width="80"/>
                        <TextBlock Margin="10" HorizontalAlignment="Center" TextWrapping="Wrap" Text="SAULE F" VerticalAlignment="Top" FontFamily="Segoe WP Black" FontSize="14"/>
                    </StackPanel>
                </Button>
            </WrapPanel>
        </Grid>
        <!-- Fin Déclaration Liste Gestion Client -->

    </Grid>

</Page>
