<Page x:Class="Madera_MMB.View_Crtl.ParametresClient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="ParametresClient">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Lib/Tools/Template_Madera.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.25*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.25*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="0.25*" />
        </Grid.RowDefinitions>

        <!-- Début Déclaration Footer Paramètres Client-->
        <Grid Grid.Row="2"
              Margin="0 5 5 5"
              Grid.Column="2"
              Grid.RowSpan="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="0.25*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid Background="DimGray"
                  Grid.Column="0" 
                  Grid.Row="1" 
                  VerticalAlignment="Stretch" 
                  HorizontalAlignment="Stretch" 
                  Grid.RowSpan="2" 
                  Grid.ColumnSpan="2">

                <Grid.RowDefinitions>
                    <RowDefinition Height="0.05*" />
                    <RowDefinition Height="0.25*" />
                    <RowDefinition Height="0.05*" />
                    <RowDefinition Height="0.25*" />
                    <RowDefinition Height="0.05*" />
                    <RowDefinition Height="0.25*" />
                    <RowDefinition Height="0.05*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.05*" />
                    <ColumnDefinition Width="0.3*" />
                    <ColumnDefinition Width="0.4*" />
                    <ColumnDefinition Width="0.3*" />
                    <ColumnDefinition Width="0.4*" />
                    <ColumnDefinition Width="0.05*" />
                </Grid.ColumnDefinitions>

                <!-- Date de création -->
                <Viewbox Margin="15,0,0,0"
                         Grid.Row="3"
                         Grid.Column="1" 
                         HorizontalAlignment="Right" 
                         VerticalAlignment="Center">
                    <Label Content="Date de création :" FontSize="6" />
                </Viewbox>
                <Viewbox Margin="15,0,0,0"
                         Grid.Row="3"
                         Grid.Column="2" 
                         HorizontalAlignment="Left" 
                         VerticalAlignment="Center">
                    <Label x:Name="lblDateCreation" FontSize="6"/>
                </Viewbox>
                <!-- Date de dernière mise à jour -->
                <Viewbox Margin="15,0,0,0"
                         Grid.Row="3"
                         Grid.Column="3" 
                         HorizontalAlignment="Right" 
                         VerticalAlignment="Center">
                    <Label Content="Dernière mise à jour :" FontSize="6" />
                </Viewbox>
                <Viewbox Margin="15,0,0,0"
                         Grid.Row="3"
                         Grid.Column="4" 
                         HorizontalAlignment="Left" 
                         VerticalAlignment="Center">
                    <Label x:Name="lblDateModification" FontSize="6" />
                </Viewbox>

            </Grid>

            <Border Grid.Row="2" BorderBrush="Black" BorderThickness="1 2 2 1" Grid.Column="1" />

        </Grid>
        <!-- Fin Déclaration Footer Paramètres Client-->

        <!-- Début Déclaration Logo Madera -->
        <Grid x:Name="ImgContainer" Grid.Row="0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Image x:Name="logo">
                <Image.Style>
                    <Style TargetType="Image">

                        <Setter Property="Source" Value="{StaticResource LogoOff}" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsOnline}" Value="True">
                                <Setter Property="Source" Value="{StaticResource Logo}" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Image.Style>
            </Image>
        </Grid>
        <!-- Fin Déclaration Logo Madera -->

        <!-- Début Déclaration Menu Gestion Liste Client-->
        <Grid x:Name="MenuGestionClient"
              Margin="5 5 5 5"
              Grid.Row="2"
              Grid.Column="0" 
              Grid.RowSpan="2">

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.25*" />
            </Grid.ColumnDefinitions>

            <!-- Début Déclaration Menu Gestion Liste Client -->
            <Grid x:Name="Menu"
                  Background="DimGray"
                  Grid.Column="1"
                  Grid.Row="0"
                  VerticalAlignment="Stretch"
                  HorizontalAlignment="Stretch"
                  Grid.RowSpan="2"
                  Grid.ColumnSpan="1">

                <Grid.RowDefinitions>
                    <RowDefinition Height="0.1*" />
                    <RowDefinition Height="0.5*" />
                    <RowDefinition Height="0.1*" />
                    <RowDefinition Height="0.5*" />
                    <RowDefinition Height="0.1*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.1*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="0.1*" />
                </Grid.ColumnDefinitions>

                <Viewbox Grid.Row="1"
                         Grid.Column="1"
                         VerticalAlignment="Stretch" 
                         HorizontalAlignment="Stretch">
                    <Button x:Name="BtnConfirmerClient"
                            FontSize="20"
                            Width="400"
                            Height="60"
                            Content="Confirmer"
                            Click="BtnConfirmerClient_Click">
                    </Button>
                </Viewbox>
                <Viewbox Grid.Row="3"
                         Grid.Column="1"
                         VerticalAlignment="Stretch" 
                         HorizontalAlignment="Stretch">
                    <Button x:Name="BtnRetourListeProjet"
                            FontSize="20"
                            Width="400"
                            Height="60"
                            Content="Retour"
                            Click="BtnRetourListeClient_Click">
                    </Button>
                </Viewbox>
            </Grid>
            <!-- Fin Déclaration Menu Gestion Liste Client -->
            <Border Grid.Row="0" BorderBrush="Black" BorderThickness="1 2 2 1" />

        </Grid>
        <!-- Fin Déclaration Menu Gestion Liste Client -->


        <!-- Début Déclaration Paramètres Client-->
        <Grid x:Name="GestionListeClient"
              Margin="5 0 5 5"
              Grid.Row="1"
              Grid.Column="1" 
              Grid.RowSpan="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="0" />
                <RowDefinition Height="*" />
                <RowDefinition Height="0.02*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Début Déclaration Details Client -->
            <Grid x:Name="DetailsClient"
                  Grid.Column="1"
                  Grid.Row="1" 
                  VerticalAlignment="Stretch" 
                  HorizontalAlignment="Stretch" 
                  Grid.RowSpan="2" 
                  Grid.ColumnSpan="1">

                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <GroupBox x:Name="GroupBoxDetailsClient"
                          Margin="10"
                          Header=" Paramètres du client "
                          VerticalAlignment="Stretch" 
                          HorizontalAlignment="Stretch" 
                          Width="auto" 
                          Height="auto" 
                          FontSize="16">

                    <Grid x:Name="GridDetailsClient"
                          VerticalAlignment="Stretch" 
                          HorizontalAlignment="Stretch" 
                          Grid.RowSpan="2" 
                          Grid.ColumnSpan="1">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="0.6*" />
                            <RowDefinition Height="0.02*" />
                            <RowDefinition Height="0.6*" />
                            <RowDefinition Height="0.02*" />
                            <RowDefinition Height="0.6*" />
                            <RowDefinition Height="0.02*" />
                            <RowDefinition Height="0.6*" />
                            <RowDefinition Height="0.02*" />
                            <RowDefinition Height="0.6*" />
                            <RowDefinition Height="0.02*" />
                            <RowDefinition Height="0.6*" />
                            <RowDefinition Height="0.02*" />
                            <RowDefinition Height="0.6*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.1*" />
                            <ColumnDefinition Width="0.4*" />
                            <ColumnDefinition Width="0.9*" />
                            <ColumnDefinition Width="0.1*" />
                        </Grid.ColumnDefinitions>

                        <!-- Nom du client -->
                        <Viewbox Grid.Row="1" 
                                 Grid.Column="1" 
                                 HorizontalAlignment="Right"
                                 VerticalAlignment="Center">
                            <Label x:Name="NomDuClient" Content="Nom du Client : " FontSize="4" />
                        </Viewbox>
                        <Viewbox Grid.Row="1" 
                                 Grid.Column="2" 
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Center">
                            <TextBox x:Name="ClientNom" 
                                     IsReadOnly="False" 
                                     Width="150" 
                                     Height="12" 
                                     Margin="2"
                                     TextWrapping="Wrap" 
                                     FontSize="5" />
                        </Viewbox>

                        <!-- Prénom du client -->
                        <Viewbox Grid.Row="3" 
                                 Grid.Column="1" 
                                 HorizontalAlignment="Right"
                                 VerticalAlignment="Center">
                            <Label x:Name="PrenomDuClient" Content="Prénom du Client : " FontSize="4" />
                        </Viewbox>
                        <Viewbox Grid.Row="3" 
                                 Grid.Column="2" 
                                 HorizontalAlignment="Left" 
                                 VerticalAlignment="Center">
                            <TextBox x:Name="ClientPrenom" 
                                     IsReadOnly="False" 
                                     Width="150" 
                                     Height="12" 
                                     Margin="2"
                                     TextWrapping="Wrap" 
                                     FontSize="5" />
                        </Viewbox>

                        <!-- Téléphone du client -->
                        <Viewbox Grid.Row="5" 
                                 Grid.Column="1" 
                                 HorizontalAlignment="Right"
                                 VerticalAlignment="Center">
                            <Label x:Name="Telephone" Content="N° de téléphone : " FontSize="4" />
                        </Viewbox>
                        <Viewbox Grid.Row="5" 
                                 Grid.Column="2" 
                                 HorizontalAlignment="Left" 
                                 VerticalAlignment="Center">
                            <TextBox x:Name="ClientTelephone" 
                                     IsReadOnly="False" 
                                     Width="150" 
                                     Height="12" 
                                     Margin="2"
                                     TextWrapping="Wrap" 
                                     FontSize="5" />
                        </Viewbox>

                        <!-- Email du client -->
                        <Viewbox Grid.Row="7"
                                 Grid.Column="1" 
                                 HorizontalAlignment="Right"
                                 VerticalAlignment="Center">
                            <Label x:Name="AdresseEmail" Content="Adresse e-mail : " FontSize="4"/>
                        </Viewbox>
                        <Viewbox Grid.Row="7" 
                                 Grid.Column="2" 
                                 HorizontalAlignment="Left" 
                                 VerticalAlignment="Center">
                            <TextBox x:Name="ClientEmail" 
                                     IsReadOnly="False" 
                                     Width="150" 
                                     Height="12" 
                                     Margin="2"
                                     TextWrapping="Wrap" 
                                     FontSize="5" />
                        </Viewbox>

                        <!-- Adresse du client -->
                        <Viewbox Grid.Row="9"
                                 Grid.Column="1" 
                                 HorizontalAlignment="Right" 
                                 VerticalAlignment="Center">
                            <Label x:Name="AdresseActuelle" Content="Adresse actuelle : " FontSize="4" />
                        </Viewbox>
                        <Viewbox Grid.Row="9" 
                                 Grid.Column="2" 
                                 HorizontalAlignment="Left" 
                                 VerticalAlignment="Center">
                            <TextBox x:Name="ClientAdresse" 
                                     IsReadOnly="False" 
                                     Width="150" 
                                     Height="12" 
                                     Margin="2"
                                     TextWrapping="Wrap" 
                                     FontSize="5" />
                        </Viewbox>

                        <!-- Code Postal du client -->
                        <Viewbox Grid.Row="11" 
                                 Grid.Column="1" 
                                 HorizontalAlignment="Right"
                                 VerticalAlignment="Center">
                            <Label x:Name="CpVille" Content="Code Postal : " FontSize="4"/>
                        </Viewbox>
                        <Viewbox Grid.Row="11" 
                                 Grid.Column="2" 
                                 HorizontalAlignment="Left" 
                                 VerticalAlignment="Center">
                            <TextBox x:Name="ClientCodePostal" 
                                     IsReadOnly="False" 
                                     Width="150" 
                                     Height="12" 
                                     Margin="2"
                                     TextWrapping="Wrap" 
                                     FontSize="5" />
                        </Viewbox>

                        <!-- Ville du client -->
                        <Viewbox Grid.Row="13" 
                                 Grid.Column="1" 
                                 HorizontalAlignment="Right"
                                 VerticalAlignment="Center">
                            <Label x:Name="Ville" Content="Ville : " FontSize="4"/>
                        </Viewbox>
                        <Viewbox Grid.Row="13" 
                                 Grid.Column="2" 
                                 HorizontalAlignment="Left" 
                                 VerticalAlignment="Center">
                            <TextBox x:Name="ClientVille" 
                                     IsReadOnly="False" 
                                     Width="150" 
                                     Height="12" 
                                     Margin="2"
                                     TextWrapping="Wrap" 
                                     FontSize="5" />
                        </Viewbox>

                    </Grid>

                </GroupBox>

            </Grid>
            <!-- Fin Déclaration Details Client -->

        </Grid>
        <!-- Fin Déclaration Paramètres Client -->

    </Grid>
</Page>
